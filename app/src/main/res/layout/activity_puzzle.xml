<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PuzzleActivity">

    <!-- Botón para subir imagen -->
    <Button
        android:id="@+id/boton_subir_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stf-Puzzle SV" />

    <!-- Tablero de juego -->
    <GridLayout
        android:id="@+id/tablero_juego"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:orientation="horizontal">
        <!-- Aquí se mostrarán las piezas del juego -->
    </GridLayout>

    <!-- Botón para comenzar juego -->
    <Button
        android:id="@+id/boton_comenzar_juego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comenzar Juego"
        android:onClick="onComenzarJuegoClick"
        android:visibility="gone" />

</LinearLayout>
